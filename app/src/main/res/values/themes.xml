<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JasChates" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/yellow</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="text" parent="Widget.Design.TextInputLayout">
        <item name="boxStrokeColor">@color/yellow</item>
        <item name="android:textCursorDrawable">@color/yellow</item>

        <item name="android:textColorHint">@color/yellow</item>
    </style>
</resources>